@model Dispatch_System.ResponseModel<Dispatch_System.Pallate>
@{
    Layout = null;
    var IndexPageUrl = "/" + ViewContext.RouteData.Values["Area"].ToString() + "/" + ViewContext.RouteData.Values["Controller"].ToString() + "/Index";
}

<div class="col-12">
    <div class="card card-primary card-outline">
        <form id="formSave" action="@Url.Action("Save", "Pallate", new { area = "Export" })" method="post" class="form-horizontal" enctype="multipart/form-data">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">@(Model.Obj.Id > 0 ? "Edit " : "Create") Pallate</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-primary btn-sm" title="Back To List" onclick="fnClose_Modal()">
                            <i class="fas fa-arrow-left"></i> Back To List
                        </button>
                    </div>
                </div>

                <div class="card-body">
                    <input type="text" class="form-control d-none" name="Id" value="@Model.Obj.Id">

                    <div class="form-group row">
                        <label for="Pallate_No" class="col-sm-2 col-form-label">Pallate No. <span style="color:red">*</span></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control form-control-sm" name="Pallate_No" value="@Model.Obj.Pallate_No" maxlength="50" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Pallate_Type" class="col-sm-2 col-form-label">Pallate Type <span style="color:red">*</span></label>
                        <div class="col-sm-4">
                            <select id="Pallate_Type" name="Pallate_Type" class="form-control select2 w-100">
                                @foreach (var item in Model.SelectListItems.Where(x => x.Group == "T"))
                                {
                                    if (item.Value == Model.Obj.Pallate_Type.ToString())
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Shipper_Qty" class="col-sm-2 col-form-label">Shipper Qty <span style="color:red">*</span></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control form-control-sm isNumberKey" name="Shipper_Qty" value="@Model.Obj.Shipper_Qty" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Dispatch_Mode" class="col-sm-2 col-form-label">Pallate Type <span style="color:red">*</span></label>
                        <div class="col-sm-4">
                            <select id="Dispatch_Mode" name="Dispatch_Mode" class="form-control select2 w-100">
                                @foreach (var item in Model.SelectListItems.Where(x => x.Group == "D"))
                                {
                                    if (item.Value == Model.Obj.Dispatch_Mode.ToString())
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-footer text-center">
                <button type="submit" class="btn btn-success btnSubmit">Save</button>
                <button type="button" class="btn btn-danger" onclick="fnClose_Modal();">Cancel</button>
            </div>
        </form>
    </div>
</div>