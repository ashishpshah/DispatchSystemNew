@model List<Dispatch_System.GateIn>

<div class="row col-12 mb-3">
	<button type="button" class="btn btn-info btn-flat px-3 mr-3" onclick="fnSelect_MDA()">Select</button>
	<button type="button" class="btn btn-danger btn-flat px-3 mr-3" onclick="fnClear_MDA()">Clear</button>
	<button type="button" class="btn btn-danger btn-flat px-3 mr-3" onclick="fnClose_Modal()">Close</button>
</div>

<div class="row col-12 w-100">
	<table id="table_Common" class="table table-bordered table-striped w-100">

		<thead>
			<tr>
				<th width="5%">Vehicle Number</th>
				<th width="5%">MDA Number</th>
				<th width="10%">Gate In Dt</th>
				<th>Driver Name</th>
				<th>Driver Contact</th>
				<th>Transporter Name</th>
				<th hidden width="0%">Plant Code</th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th>Tare Wt</th>
				<th>Tare Wt Dt</th>
				<th>Gross Wt</th>
				<th>Gross Wt Dt</th>
				<th>Net Wt</th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
			</tr>
		</thead>
		<tbody>

			@if (Model != null && Model.Count > 0)
			{
				foreach (var item in Model)
				{
					<tr>
						<td>@item.Truck_No</td>
						<td>@item.Common_No</td>
						<td>@item.Gate_In_Dt?.ToString("dd/MM/yyyy HH:mm").Replace("-", "/")</td>
						<td>@item.Driver_Name</td>
						<td>@item.Driver_Contact</td>
						<td>@item.Transporter_Name</td>
						<td hidden>@item.Plant_CD</td>
						<td hidden>@item.Id</td>
						<td hidden>@item.Plant_Id</td>
						<td>@item.Tare_Wt</td>
						<td>@item.Tare_Wt_Dt?.ToString("dd/MM/yyyy HH:mm").Replace("-", "/")</td>
						<td>@item.Gross_Wt</td>
						<td>@item.Gross_Wt_Dt?.ToString("dd/MM/yyyy HH:mm").Replace("-", "/")</td>
						<td>@item.Net_Wt</td>
						<td hidden>@item.Verified_Documents</td>
						<td hidden width="0%">@item.Driver_Id_Type</td>
						<td hidden width="0%">@item.Driver_Id_Number</td>
						<td hidden width="0%">@item.Inward_Sys_Id</td>
						<td hidden width="0%">@item.UOM</td>
						<td hidden width="0%">@item.Common_Sys_Id</td>
						<td hidden width="0%">@item.Sr_No</td>
						<td hidden width="0%">@item.Expected_Shipper</td>
						<td hidden width="0%">@item.Loaded_Shipper</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>
