@using System.Globalization;
@model (string PageTitle_Primary, string PageTitle_Secondary, List<QRCodeGeneration> List, string Status, bool withDetail, bool isPrint)
@{
    if (!string.IsNullOrEmpty(Model.Status) && Model.Status == "QR_V")
    {
        ViewData["Title"] = "QR Codes View";
    }
    else if (!string.IsNullOrEmpty(Model.Status) && Model.Status == "QR_VOP")
    {
        ViewData["Title"] = "QR Codes View (OP)";
    }
}
@if (Model.isPrint == true)
{
    Layout = "~/Views/Shared/_Layout_Print.cshtml";
}

<div class="row col-12 mb-3">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12" style="text-align:center;">
                <h2 class="font-weight-bold">@(!string.IsNullOrEmpty(Model.PageTitle_Primary) ? Model.PageTitle_Primary : "IFFCO NANO FERTILIZER PLANT - KALOL") </h2>
            </div>
            <br />
            @if (!string.IsNullOrEmpty(Model.PageTitle_Secondary))
            {
                <div class="col-sm-12" style="text-align:center;">
                    <h5 class="font-weight-bold"> @Model.PageTitle_Secondary </h5>
                </div>
                <br />
            }
            <div class="col-sm-12 @(Model.isPrint == true ? "":"d-none")" style="text-align:right;">
                <h5 class="font-weight-bold"><b>Printed on : @DateTime.Now.ToString("dd/MM/yyyy hh:mm tt").Replace("-", "/")</b></h5>
            </div>
            <br />
        </div>
    </div>
</div>

<div class="row col-12 mt-5 text-center table-responsive">

    @* <table id="table_Common" class="table table-bordered w-100 divDetail @((Model.withDetail == true) ? "" : "d-none")"> *@

    <table class="table table-bordered w-100 table_Common divDetail">
        <thead>
            <tr>
                <th>#</th>
                <th>Generation Status</th>
                <th>Generated On</th>
                <th>Last Downloaded By</th>
                <th>Last Downloaded On</th>
                <th>Request No</th>
                <th>Plant</th>
                <th>Generated By</th>
                <th>SKU</th>
                <th>QR Code QTY</th>
                <th>Sr No: Printed From</th>
                <th>Sr No: Printed To</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.List != null && Model.List.Count() > 0)
            {
                @foreach (var item in Model.List.OrderBy(x => x.SrNo).ToList())
                {
                    <tr>
                        <td>@item.SrNo</td>
                        <td>@item.RequestStatus</td>
                        <td>@item.RequestDate_Text</td>
                        <td>@item.LastDownloadBy</td>
                        <td>@item.LastDownloadDate_Text</td>
                        <td>@item.RequestNo</td>
                        <td>@item.PlantName</td>
                        <td>@item.Created_By</td>
                        <td>@item.SkuDesc</td>
                        <td>@item.TotalQty</td>
                        <td>@item.Serial_No_From</td>
                        <td>@item.Serial_No_To</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="12"><span class="w-100">No any records found.</span></td></tr>
            }
        </tbody>

    </table>

</div>
