@using System.Globalization;
@model (string PageTitle_Primary, string PageTitle_Secondary, dynamic objFilter, List<QRCodeGeneration> List, bool withDetail, bool isPrint)

@if (Model.isPrint == true)
{
    ViewData["Title"] = "QR Codes View SUP";
    Layout = "~/Views/Shared/_Layout_Print.cshtml";
}

<div class="row col-12 mb-3">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12" style="text-align:center;">
                <h2 class="font-weight-bold">@(!string.IsNullOrEmpty(Model.PageTitle_Primary) ? Model.PageTitle_Primary : "IFFCO NANO FERTILIZER PLANT - KALOL") </h2>
            </div>
            <br />
            <div class="col-sm-12" style="text-align:center;">

                @if (!string.IsNullOrEmpty(Model.PageTitle_Secondary))
                {
                    <h5 class="font-weight-bold">
                        QR Codes View SUP Detail : @Model.PageTitle_Secondary
                    </h5>
                }
                else
                {
                    <h4 class="font-weight-bold">QR Codes View SUP Detail </h4>
                }
            </div>
            <br />
            <div class="col-sm-12 @(Model.isPrint == true ? "":"d-none")" style="text-align:right;">
                <h5 class="font-weight-bold"><b>Printed on : @DateTime.Now.ToString("dd/MM/yyyy hh:mm tt").Replace("-", "/")</b></h5>
            </div>
            <br />
        </div>
    </div>
</div>

<div class="row col-12 mt-5 text-center">

    @* <table id="table_Common" class="table table-bordered w-100 divDetail @((Model.withDetail == true) ? "" : "d-none")"> *@
    <table class="table table-bordered w-100 table_Common divDetail" id="tblmain">
        <thead>
            <tr>
                <th>Generation Status</th>
                <th>Generated On</th>
                <th>Request No</th>
                <th>Plant</th>
                <th>Generated By</th>
                <th>SKU</th>
                <th>QR Code QTY</th>
                <th>SrNo: Printed From</th>
                <th>SrNo: Printed To</th>
                <th>Last Downloaded By</th>
                <th>Last Downloaded On</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.List != null && Model.List.Count() > 0)
            {
                @foreach (var item in Model.List.OrderBy(x => x.SrNo).ToList())
                {
                    <tr>
                        <td>@item.RequestStatus</td>
                        <td>@item.RequestDate_Text</td>
                        <td>@item.RequestNo</td>
                        <td>@item.PlantName</td>
                        <td>@item.Created_By</td>
                        <td>@item.SkuDesc</td>
                        <td>@item.RequestQty</td>
                        <td>@item.Serial_No_From</td>
                        <td>@item.Serial_No_To</td>
                        <td>@item.LastDownloadBy</td>
                        <td>@item.LastDownloadDate_Text</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="11"><span class="w-100">No any records found.</span></td></tr>
            }
        </tbody>

    </table>

</div>
