@model ResponseModel<LOV>
@{
    Layout = null;
    var IndexPageUrl = "/" + ViewContext.RouteData.Values["Area"].ToString() + "/" + ViewContext.RouteData.Values["Controller"].ToString() + "/Index";
}

<div class="col-12">
    <div class="card card-primary card-outline">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">@(!string.IsNullOrEmpty(Model.Obj.Lov_Column) ? "Edit " : "Create") LOV</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-primary btn-sm" title="Back To List" onclick="fnBackToList('@IndexPageUrl')">
                        <i class="fas fa-arrow-left"></i> Back To List
                    </button>
                </div>
            </div>

            <div class="card-body">
                <div class="form-group row">
                    <label for="Lov_Column" class="col-sm-2 col-form-label text-right">Lov Column<span style="color:red">*</span></label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control form-control-sm" name="Lov_Column" value="@Model.Obj.Lov_Column"
                               data-required data-msg="The Lov Column field is required." autocomplete="off" @(!string.IsNullOrEmpty(Model.Obj.Lov_Column) ? "readonly " : "") />
                    </div>
                </div>
                @*<div class="form-group row ">
                <label for="Lov_Code" class="col-sm-2 col-form-label text-right">Lov Code<span style="color:red">*</span></label>
                <div class="col-sm-4">
                <input type="text" class="form-control form-control-sm" name="Lov_Code" value="@Model.Obj.Lov_Code"
                data-required data-msg="The Lov Code field is required." autocomplete="off" />
                </div>

                <label for="Lov_Desc" class="col-sm-2 col-form-label text-right">Lov Desc<span style="color:red">*</span></label>
                <div class="col-sm-4">
                <input type="text" class="form-control form-control-sm" name="Lov_Desc" value="@Model.Obj.Lov_Desc"
                data-required data-msg="The Lov Desc field is required." autocomplete="off" />
                </div>
                </div>*@

                @* <div class="form-group row">
                <label class="col-sm-2 col-form-label text-right">Status </label>
                <div class="col-sm-4">
                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success border-0">
                <input type="checkbox" class="custom-control-input"
                id="switch_Status" name="IsActive" @(Model.Obj == null || Model.Obj.IsActive == true ? "checked" : "")
                onchange="fnChange_Switch(this, 'label_Switch_Status')">
                <label class="custom-control-label" for="switch_Status" id="label_Switch_Status" data-true="Active" data-false="Inactive">@((Model.Obj != null && Model.Obj.IsActive == true) || Model.Obj == null ? "Active" : "Inactive")</label>
                </div>
                </div>
                </div>*@

                <div class="row no-gutters p-0 m-0">
                    <div class="col-sm-6">
                        <h1 class="m-0">&nbsp;</h1>
                    </div>
                    <div class="col-sm-6">
                        <div class="float-sm-right">
                            <button type="button" id="btnBackToList" class="btn btn-warning btn-md pull-right mr-2" onclick="fnAddRow()">
                                <i class="fas fa-plus"></i>
                            </button>
                            @*<button type="button" id="btnBackToList" class="btn btn-warning btn-md pull-right mr-2" onclick="fnAddNewRow('@string.Join("||", Model.SelectListItems.Where(x => x.Group == "P").Select(x=>x.Value + "|" + x.Text).ToList())', '@string.Join("||", Model.SelectListItems.Where(x => x.Group == "R").Select(x=>x.Value + "|" + x.Text).ToList())');">
                            <i class="fas fa-plus"></i> &nbsp; Add new
                            </button>*@
                        </div>
                    </div>
                </div>
                <div class="row no-gooters">
                    <div class="col-md-12 my-1">
                        <table id="table_Lov" class="table table-bordered table-striped w-100">
                            <thead>
                                <tr>
                                    <th hidden>#</th>
                                    <th hidden>Lov Column</th>
                                    <th>Lov Code</th>
                                    <th>Lov Desc</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Obj.listLov != null && Model.Obj.listLov.Count() > 0)
                                {
                                    for (int i = 0; i < Model.Obj.listLov.Count(); i++)
                                    {
                                        <tr>
                                            <td hidden></td>
                                            <td hidden><input type="text" class="form-control form-control-sm" name="listLov[@i].Lov_Column" value="@Model.Obj.listLov[i].Lov_Column" maxlength="50" autocomplete="off"></td>
                                            <td><input type="text" class="form-control form-control-sm" name="listLov[@i].Lov_Code" value="@Model.Obj.listLov[i].Lov_Code" maxlength="50" autocomplete="off"></td>
                                            <td><input type="text" class="form-control form-control-sm" name="listLov[@i].Lov_Desc" value="@Model.Obj.listLov[i].Lov_Desc" autocomplete="off"></td>
                                            <td>
                                                <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success border-0">
                                                    <input type="checkbox" class="custom-control-input"
                                                   id="switch_Status_@i" name="listLov[@i].IsActive" @(Model.Obj.listLov == null || Model.Obj.listLov[i].IsActive == true ? "checked" : "")
                                                   onchange="fnChange_Switch(this, 'label_Switch_Status_@i')">
                                                    <label class="custom-control-label" for="switch_Status" id="label_Switch_Status_@i" data-true="Active" data-false="Inactive">@((Model.Obj.listLov.Count() > 0 && Model.Obj.listLov[i].IsActive == true) || Model.Obj == null ? "Active" : "Inactive")</label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    @*<button type="button" class="btn btn-info btn-sm btn-flat" data-toggle="tooltip" data-placement="top" title="Edit"
                                            onclick="fnLoadParialView('divformSave_VendorPOSite', '@Url.Action("Partial_AddEditForm_Site","VendorPO", new {  area = "Admin" })?id=Id_@i');">
                                            <i class="far fa-edit"></i>
                                            </button>*@

                                                    <button type="button" class="btn btn-danger btn-sm btn-flat ml-2" data-toggle="tooltip" data-placement="top" title="Delete"
                                                    onclick="fnDelete_Confirm('@Url.Action("Partial_AddEditForm_Site","LOV", new {  area = "Admin" })?id=Id_@i', '#table_Lov');">
                                                        <i class="far fa-trash-alt"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="clearfix"></div>
                </div>

            </div>
            <div class="card-footer text-center">
                <button type="submit" class="btn btn-success btnSubmit">Save</button>
                <button type="button" class="btn btn-danger" onclick="fnCloseParialView('divformSave', '#table_Common_SrNo');">Cancel</button>
            </div>
        </div>
    </div>
</div>
