@model ResponseModel<Menu1>
@{
	Layout = null;
	var IndexPageUrl = "/" + ViewContext.RouteData.Values["Area"].ToString() + "/" + ViewContext.RouteData.Values["Controller"].ToString() + "/Index";
}

<div class="col-12">
	<div class="card card-primary card-outline">
		@* <form id="formSave" asp-area="Admin" asp-controller="Country" asp-action="Save" method="post" class="form-horizontal" enctype="multipart/form-data"> *@
		<div class="card card-primary card-outline">
			<div class="card-header">
				<h3 class="card-title">@(Model.Obj.Id > 0 ? "Edit " : "Create") menu</h3>
				<input type="text" class="form-control form-control-sm d-none" id="Id" name="Id" value="@(Model.Obj != null && Model.Obj.Id > 0 ? Model.Obj.Id.ToString() : "")">

				<div class="card-tools">
					<button type="button" class="btn btn-primary btn-sm" title="Back To List" onclick="fnBackToList('@IndexPageUrl')">
						<i class="fas fa-arrow-left"></i> Back To List
					</button>
				</div>
			</div>

			<div class="card-body">
				<div class="form-group row">
					<label for="Country_Id" class="col-sm-2 col-form-label text-right">Menu Name<span style="color:red">*</span></label>
					<div class="col-sm-4">
						<input type="text" class="form-control form-control-sm" name="Display_Name" value="@Model.Obj.Display_Name" maxlength="80" />
					</div>
					<label for="Parent_Id" class="col-sm-2 col-form-label text-right">Parent menu</label>
					<div class="col-sm-4">
						<select id="Parent_Id" name="Parent_Id" class="form-control form-control-sm select2 w-100">
							@foreach (var item in Model.SelectListItems)
							{
								if (item.Value == Model.Obj.Parent_Id.ToString())
								{
									<option value="@item.Value" selected>@item.Text</option>
								}
								else
								{
									<option value="@item.Value">@item.Text</option>
								}
							}
						</select>
					</div>
				</div>
				<div class="form-group row">
					<label for="State_Id" class="col-sm-2 col-form-label text-right">Controller<span style="color:red">*</span></label>
					<div class="col-sm-4">
						<input type="text" class="form-control form-control-sm" name="Controller" value="@Model.Obj.Controller" maxlength="80" />
					</div>
					<label for="Country_Id" class="col-sm-2 col-form-label text-right">Area</label>
					<div class="col-sm-4">
						<input type="text" class="form-control form-control-sm" name="Area" value="@Model.Obj.Area" maxlength="80" />
					</div>
				</div>
				
				<div class="form-group row">
					<label for="Url" class="col-sm-2 col-form-label text-right">Url </label>
					<div class="col-sm-4">
						<input type="text" class="form-control form-control-sm" name="Url" value="@Model.Obj.Url" autocomplete="off" />
					</div>
				</div>

				<div class="form-group row">
					<label class="col-sm-2 col-form-label text-right">Status </label>
					<div class="col-sm-4">
						<div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success border-0">
							<input type="checkbox" class="custom-control-input"
								   id="switch_Status" name="IsActive" @(Model.Obj == null || Model.Obj.IsActive == true || Model.Obj.Id == 0 ? "checked" : "")
								   onchange="fnChange_Switch(this, 'label_Switch_Status')">
							<label class="custom-control-label" for="switch_Status" id="label_Switch_Status" data-true="Active" data-false="Inactive">@((Model.Obj != null && Model.Obj.IsActive == true) || Model.Obj == null || Model.Obj.Id == 0 ? "Active" : "Inactive")</label>
						</div>
					</div>
					@if (@Model.Obj != null && Model.Obj.DisplayOrder > 0)
					{
						<label for="DisplayOrder" class="col-sm-2 col-form-label text-right">Display order</label>
						<div class="col-sm-4">
							<input type="text" class="form-control form-control-sm" name="DisplayOrder" value="@Model.Obj.DisplayOrder" maxlength="80" />
						</div>
					}
				</div>

				<div class="form-group row">
					<label class="col-sm-2 col-form-label text-right">Admin use only ? <span style="color:red">&nbsp;</span></label>
					<div class="col-sm-4">
						<div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success border-0">
							<input type="checkbox" class="custom-control-input"
								   id="switch_Admin" name="IsAdmin" @(Model.Obj == null || Model.Obj.IsAdmin == true ? "checked" : "")
								   onchange="fnChange_Switch(this, 'label_Switch_Admin')">
							<label class="custom-control-label" for="switch_Admin" id="label_Switch_Admin" data-true="Yes" data-false="No">@((Model.Obj != null && Model.Obj.IsAdmin == true) ? "Yes" : "No")</label>
						</div>
					</div>
				</div>

			</div>
		</div>
		<div class="card-footer text-center">
			<button type="button" class="btn btn-success btnSubmit">Save</button>
			<button type="button" class="btn btn-danger" onclick="fnCloseParialView('divformSave', '#table_Common_SrNo');">Cancel</button>

		</div>
	</div>
</div>
