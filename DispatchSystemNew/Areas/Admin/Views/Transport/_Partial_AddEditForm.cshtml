@model ResponseModel<Transport>
@{
    Layout = null;
    var IndexPageUrl = "/" + ViewContext.RouteData.Values["Area"].ToString() + "/" + ViewContext.RouteData.Values["Controller"].ToString() + "/Index";
}

<div class="col-12">
    <div class="card card-primary card-outline">
        @* <form id="formSave" asp-area="Admin" asp-controller="Transport" asp-action="Save" method="post" class="form-horizontal" enctype="multipart/form-data"> *@
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">@(Model.Obj.plant_Id > 0 ? "Edit " : "Create") Transport</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-primary btn-sm" title="Back To List" onclick="fnBackToList('@IndexPageUrl')">
                        <i class="fas fa-arrow-left"></i> Back To List
                    </button>
                </div>
            </div>

            <div class="card-body">
                <input type="text" class="form-control d-none" name="Id" value="@Model.Obj.plant_Id">
                <div class="form-group row">
                    <label for="Transport_Name" class="col-sm-2 col-form-label">Transport Code<span style="color:red">*</span></label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="tptr_cd" value="@Model.Obj.tptr_cd" maxlength="80" />
                    </div>
                    <label for="Transport_Name" class="col-sm-2 col-form-label">Transport Name<span style="color:red">*</span></label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="tptr_name" value="@Model.Obj.tptr_name" maxlength="80" />
                    </div>
                </div>               
            </div>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-success btnSubmit">Save</button>
            <button type="button" class="btn btn-danger" onclick="fnCloseParialView('divformSave', '#table_Common_SrNo');">Cancel</button>

            @* </form> *@
        </div>
    </div>
</div>
</div>