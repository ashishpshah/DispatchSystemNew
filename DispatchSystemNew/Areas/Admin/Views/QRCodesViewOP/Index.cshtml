                        // 	text: 'CSV',
                        // 	filename: 'QR Code Requests List - OP',
                        // 	init: function (api, node, config) { $(node).removeClass('btn-default') }
                        // },
                        // {
                        // 	extend: "excel",
                        // 	className: "btn-flat btn-success mx-2 px-3",
                        // 	titleAttr: 'Export in Excel',
                        // 	text: 'Excel',
                        // 	filename: 'QR Code Requests List - OP',
                        // 	init: function (api, node, config) { $(node).removeClass('btn-default') }
