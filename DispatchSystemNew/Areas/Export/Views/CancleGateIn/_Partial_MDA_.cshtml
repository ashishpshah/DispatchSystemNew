@model List<Dispatch_System.MDA>

<div class="row col-12 mb-3">
	<button type="button" class="btn btn-info btn-flat px-3 mr-3" onclick="fnSelect_MDA()">Select</button>
	@* <button type="button" class="btn btn-danger btn-flat px-3 mr-3" onclick="fnClear_MDA()">Clear</button> *@
	<button type="button" class="btn btn-danger btn-flat px-3 mr-3" onclick="fnClose_Modal()">Close</button>
</div>

<div class="row col-12 w-100">
	<table id="table_Common" class="table table-bordered table-striped w-100">

		<thead>
			<tr>
				<th width="5%">Vehicle Number</th>
				<th width="5%">MDA Number</th>
				<th hidden width="0%">DI No.</th>
				<th hidden width="0%">Plant Code</th>
				<th width="10%">MDA Date</th>
				<th>Driver Name</th>
				<th>Driver Contact</th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
				<th hidden width="0%"></th>
			</tr>
		</thead>
		<tbody>

			@if (Model != null && Model.Count > 0)
			{
				foreach (var item in Model)
				{
					<tr>
						<td>@item.vehicle_no</td>
						<td>@item.mda_no</td>
						<td hidden>@item.di_no</td>
						<td hidden>@item.plant_cd</td>
						<td>@item.mda_dt</td>
						<td>@item.driver</td>
						<td>@item.mobile_no</td>
						<td hidden>@item.tptr_cd</td>
						<td hidden>@item.tptr_name</td>
						<td hidden>@item.Id</td>
						<td hidden>@item.party_name</td>
						<td hidden width="0%">@item.Driver_Id_Type</td>
						<td hidden width="0%">@item.Driver_Id_Number</td>
						<td hidden width="0%">@item.Inward_Sys_Id</td>
					</tr>
				}

			}
		</tbody>
	</table>
</div>