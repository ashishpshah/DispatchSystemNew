@model List<SO>

<div class="row col-12 mb-3">
    <button type="button" class="btn btn-info btn-flat px-3 mr-3" onclick="fnSelect_MDA()">Select</button>
    <button type="button" class="btn btn-danger btn-flat px-3 mr-3" onclick="fnClear_MDA()">Clear</button>
    <button type="button" class="btn btn-danger btn-flat px-3 mr-3" onclick="fnClose_Modal()">Close</button>
</div>

<div class="row col-12 w-100">
    <table id="table_Common" class="table table-bordered table-striped w-100">
        <thead>
            <tr>
                <th width="5%">SO Number</th>
                <th width="10%">SO Date</th>
                <th>Release Date</th>
                <th>Customer Name</th>
                <th>Site Name</th>
                <th>Address</th>
                <th>Status</th>
                <th hidden></th>
                <th hidden></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SoNo</td>
                        <td>@item.SoDate_Text</td>
                        <td>@item.SoReleaseDate_Text</td>
                        <td>@item.CustName</td>
                        <td>@item.SiteName</td>
                        <td>@item.Add1</td>
                        <td>@item.Status</td>
                        <td hidden>@item.Truck_No</td>
                        <td hidden>@item.Transporter_Name</td>
                        @*<td hidden width="0%">@item.Driver_Id_Type</td>
                <td hidden width="0%">@item.Driver_Id_Number</td>*@
                    </tr>
                }
            }
        </tbody>
    </table>
</div>