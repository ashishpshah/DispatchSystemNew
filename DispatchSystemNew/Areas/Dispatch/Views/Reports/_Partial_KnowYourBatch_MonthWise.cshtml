                    </tr>
                }
                <tr>
                    <td colspan="5"><b>Total:</b></td>
                    <td>@Model.Dispatch_List.Sum(x => Convert.ToInt64(x.DispatchedQtyShipper))</td>
                    <td>@Model.Dispatch_List.Sum(x => Convert.ToInt64(x.DispatchedQtyUnits))</td>
                </tr>
            </tbody>

        </table>
    }

</div>
