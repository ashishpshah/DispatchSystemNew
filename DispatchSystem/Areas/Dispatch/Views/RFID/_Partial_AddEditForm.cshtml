@model ResponseModel<RFID>
@{
	Layout = null;
	var IndexPageUrl = "/" + ViewContext.RouteData.Values["Area"].ToString() + "/" + ViewContext.RouteData.Values["Controller"].ToString() + "/Index";
}

<div class="col-12">
	<div class="card card-primary card-outline">
		<div class="card card-primary card-outline">
			<div class="card-header">
				<h3 class="card-title">@(Model.Obj != null && Model.Obj.Id > 0 ? "Edit " : "Create") RFID</h3>
				<input type="text" class="form-control d-none" id="Id" name="Id" value="@(Model.Obj != null && Model.Obj.Id > 0 ? Model.Obj.Id.ToString() : "")">

				<div class="card-tools">
					<button type="button" class="btn btn-primary btn-sm" title="Back To List" onclick="fnBackToList('@IndexPageUrl')">
						<i class="fas fa-arrow-left"></i> Back To List
					</button>
				</div>
			</div>

			<div class="card-body">
				<div class="form-group row">

					<label for="RfidSrno" class="col-sm-2 col-form-label text-right">RFID Srno<span style="color:red">*</span></label>
					<div class="col-sm-4">
						<input type="text" class="form-control form-control-sm" name="RfidSrno" value="@Model.Obj.RfidSrno" maxlength="80"
							   data-required data-msg="The RFID Srno field is required." autocomplete="off" />
					</div>
				</div>

				<div class="form-group row">
					<label for="RfidCode" class="col-sm-2 col-form-label text-right">RFID Code<span style="color:red">*</span></label>
					<div class="col-sm-4">
						<input type="text" class="form-control form-control-sm" name="RfidCode" value="@Model.Obj.RfidCode" maxlength="80"
							   data-required data-msg="The RFID Code field is required." autocomplete="off" />
					</div>
				</div>
				@* <div class="form-group row">
				<label for="RfidCode" class="col-sm-2 col-form-label text-right">Status <span style="color:red">*</span></label>
				<div class="col-sm-4">
				<input type="text" class="form-control form-control-sm" name="Status" value="@Model.Obj.Status" maxlength="10"
				data-required data-msg="The RFID Code field is required." autocomplete="off" />
				</div>
				</div>

				<div class="form-group row">
				<label class="col-sm-2 col-form-label text-right">IsActive <span style="color:red">&nbsp;</span></label>
				<div class="col-sm-4">
				<div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success border-0">
				<input type="checkbox" class="custom-control-input"
				id="switch_Status" name="IsActive" @(Model.Obj == null || Model.Obj.IsActive == true || Model.Obj.Id == 0 ? "checked" : "")
				onchange="fnChange_Switch(this, 'label_Switch_Status')">
				<label class="custom-control-label" for="switch_Status" id="label_Switch_Status" data-true="Active" data-false="Inactive">@((Model.Obj != null && Model.Obj.IsActive == true) || Model.Obj == null || Model.Obj.Id == 0 ? "Active" : "Inactive")</label>
				</div>
				</div>
				</div> *@

				<div class="form-group row">
					<label class="col-sm-2 col-form-label text-right">Status <span style="color:red">&nbsp;</span></label>
					<div class="col-sm-4">
						<div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success border-0">
							<input type="checkbox" class="custom-control-input"
								   id="switch_Status" name="IsActive" @(Model.Obj == null || Model.Obj.IsActive == true || Model.Obj.Id == 0 ? "checked" : "")
								   onchange="fnChange_Switch(this, 'label_Switch_Status')">
							<label class="custom-control-label" for="switch_Status" id="label_Switch_Status" data-true="Active" data-false="Assigned">@((Model.Obj != null && Model.Obj.IsActive == true) || Model.Obj == null || Model.Obj.Id == 0 ? "Active" : "Assigned")</label>
						</div>
					</div>
				</div>

				@if (Model.Obj != null && Model.Obj.Id > 0)
				{
					<div class="form-group row">
						<label for="ReasonforEdit" class="col-sm-2 col-form-label text-right">Reason for Edit<span style="color:red">*</span></label>
						<div class="col-sm-4">
							<input type="text" class="form-control form-control-sm" name="ReasonforEdit" value="@Model.Obj.ReasonforEdit" maxlength="80"
								   data-required data-msg="The Reason for Edit field is required." autocomplete="off" />
						</div>
					</div>
				}
			</div>
			<div class="card-footer text-center">
				<button type="submit" class="btn btn-success btnSubmit">Save</button>
				<button type="button" class="btn btn-danger" onclick="fnCloseParialView('divformSave', '#table_Common_SrNo');">Cancel</button>
			</div>
		</div>
	</div>
</div>
