@model ResponseModel<LOV>
@{
    Layout = null;
    var IndexPageUrl = "/" + ViewContext.RouteData.Values["Area"].ToString() + "/" + ViewContext.RouteData.Values["Controller"].ToString() + "/Index";
}

<div class="col-12">
    <div class="card card-primary card-outline">
        @* <form id="formSave" asp-area="Admin" asp-controller="Country" asp-action="Save" method="post" class="form-horizontal" enctype="multipart/form-data"> *@
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">@(Model.Obj.Lov_Column != "" ? "Edit " : "Create") Lov </h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-primary btn-sm" title="Back To List" onclick="fnBackToList('@IndexPageUrl')">
                        <i class="fas fa-arrow-left"></i> Back To List
                    </button>
                </div>
            </div>

            <div class="card-body">
               
                    <input type="text" class="form-control d-none" asp-for="Obj.Action" value="@ViewBag.Action">

                <div class="form-group row">
                    <label for="Lov_Column" class="col-sm-2 col-form-label">Column Name<span style="color:red">*</span></label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="Lov_Column" maxlength="30" asp-for="Obj.Lov_Column" readonly="@(Model.Obj.Lov_Column !="" && Model.Obj.Lov_Column !=null ? true : false)">
                    </div>
                    <label for="Column_For" class="col-sm-2 col-form-label">Display Text<span style="color:red">*</span></label>
                    <div class="col-sm-4">
                        <input type="Column_For" class="form-control" id="Column_For" maxlength="50" asp-for="Obj.Column_For">
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <button type="submit" class="btn btn-success btnSubmit">Save</button>
            <button type="button" class="btn btn-danger" onclick="fnCloseParialView('divformSave', '#table_Common_SrNo');">Cancel</button>

            @* </form> *@
        </div>
    </div>
</div>
