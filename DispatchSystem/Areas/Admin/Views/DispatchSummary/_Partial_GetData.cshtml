@using System.Globalization;
@model (string PageTitle_Primary, string PageTitle_Secondary, dynamic objFilter, List<MDA_Status> List, bool withDetail, bool isPrint)

@if (Model.isPrint == true)
{
    ViewData["Title"] = "Dispatch Summary Report";
    Layout = "~/Views/Shared/_Layout_Print.cshtml";
}

<div class="row col-12 mb-3">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12" style="text-align:center;">
                <h2 class="font-weight-bold">@(!string.IsNullOrEmpty(Model.PageTitle_Primary) ? Model.PageTitle_Primary : "IFFCO NANO FERTILIZER PLANT - KALOL") </h2>
            </div>
            <br />
            <div class="col-sm-12" style="text-align:center;">

                @if (!string.IsNullOrEmpty(Model.PageTitle_Secondary))
                {
                    <h5 class="font-weight-bold">
                        Dispatch Summary Detail : @Model.PageTitle_Secondary
                    </h5>
                }
                else
                {
                    <h4 class="font-weight-bold">Dispatch Summary Detail </h4>
                }
            </div>
            <br />
            <div class="col-sm-12 @(Model.isPrint == true ? "":"d-none")" style="text-align:right;">
                <h5 class="font-weight-bold"><b>Printed on : @DateTime.Now.ToString("dd/MM/yyyy hh:mm tt").Replace("-", "/")</b></h5>
            </div>
            <br />
        </div>
    </div>
</div>

<div class="row col-12 mt-5 text-center">

    @* <table id="table_Common" class="table table-bordered w-100 divDetail @((Model.withDetail == true) ? "" : "d-none")"> *@
    <table class="table table-bordered w-100 table_Common divDetail" id="tblmain">
        <thead>
            <tr>
                <th>MDA No</th>
                <th>Transaction Type</th>
                <th>Article Code</th>
                <th>Article Name</th>
                <th>Dispatch DateTime</th>
                <th>Dispatch From Type</th>
                <th>Dispatch From Code & Name</th>
                <th>Dispatch To Type</th>
                <th>Dispatch To Code & Name</th>
                <th>Dispatched Qty (KL)</th>
                <th>Dispatched Qty (Shipper)</th>
                <th>Dispatched Qty (Units)</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.List != null && Model.List.Count() > 0)
            {
                @foreach (var item in Model.List.OrderBy(x => x.SrNo).ToList())
                {
                    <tr>
                        <td>@item.MDANo</td>
                        <td>@item.TransactionType</td>
                        <td>@item.ArticleCode</td>
                        <td>@item.ArticleName</td>
                        <td>@item.DispatchDateTime</td>
                        <td>@item.DispatchFromType</td>
                        <td>@item.DispatchFromCodeAndName</td>
                        <td>@item.DispatchToType</td>
                        <td>@item.DispatchToCodeAndName</td>
                        <td>@item.DispatchedQtyKL</td>
                        <td>@item.DispatchedQtyShipper</td>
                        <td>@item.DispatchedQtyUnits</td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="12"><span class="w-100">No any records found.</span></td></tr>
            }
        </tbody>

    </table>

</div>
